<div class="col-md-9 offset-md-1" style="background-color: #fff;margin-top: 25px;padding:20px;">

<h3><a class="btn btn-secondary" style="background-color:tomato" href="/cliente"><i class="fa fa-plus"></i> Crear Nuevo</a> Lista de Clientes</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Correo Electrónico</th>
            <th>Teléfono</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.cedula}}</td>
            <td>{{this.nombre}}</td>
            <td>{{this.correo}}</td>
            <td>{{this.telefono}}</td>

            <td>
                <a href="/cliente/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/cliente/delete/{{this._id}}" onclick="return confirm('Seguro que desea eliminar este cliente ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a href="/">
<button class="btn btn-secondary" style="background-color:blueviolet"><span>Volver</span></button>
</a>  
</div>   
