<div class="col-md-8 offset-md-1" style="background-color: #fff;margin-top: 25px;padding:20px;">

<h3>{{viewTittle}} </h3>
<form action="/vehiculo" method="POST"autocomplete="off">
<input type="hidden"name="_id"value="{{vehiculo._id}}">

    <div class='form-row'>
        <div class='form-group col-md-6'>
            <label>Placa </label>
            <input type="number"class="form-control"name="placa" value="{{vehiculo.placa}}" required>
        </div>
   
        <div class='form-group col-md-6'>
            <label> Año de fabricación </label>
            <input type="number"class="form-control"name="anno"value="{{vehiculo.anno}}"required>
        </div>
    </div>
    
    <div class='form-row'>
        
        <div class='form-group col-md-6'>
        <label> Marca </label>
        <input type="number"class="form-control"name="marca"value="{{vehiculo.marca}}"required>        
        </div>
        
        <div class='form-group col-md-6'>
        <label> Modelo </label>
        <input type="text" class="form-control"name="modelo"value="{{vehiculo.modelo}}"required>
        </div>
        
    </div>

    <div class='form-row'>
        <div class='form-group col-md-6'>
            <label> Estilo </label>

            <select id="estilo" name="estilo" class="form-control" required>
            <option selected>{{vehiculo.estilo}}</option>
            <option>Sedán</option>
            <option>Pickup</option>
            <option>TodoTerreno</option>
            <option>Microbús</option>

            </select>
        </div>

        <div class='form-group col-md-6'>
            <label> Capacidad </label>
            <input type="number"class="form-control"name="capacidad"value="{{vehiculo.capacidad}}"required>
        </div>
    </div>

    <div class='form-row'>
        <div class='form-group col-md-6'>
            <label> Cilindrada </label>
            <input type="number"class="form-control"name="cilindrada"value="{{vehiculo.cilindrada}}"required>
        </div>
        <div class='form-group col-md-6'>
            <label> Color </label>
            <input type="text"class="form-control"name="color"value="{{vehiculo.color}}"required>
        </div>
    </div>    
    
    <div class='form-row'>
        <div class='form-group col-md-6'>
            <label> Combustible </label>
            
            <select id="combustible" name="combustible" class="form-control" required>
            <option selected>{{vehiculo.combustible}}</option>
            <option>Gasolina</option>
            <option>Diesel</option>
            <option>Híbrido</option>
            <option>Eléctrico</option>
            </select>
        </div>

        <div class='form-group col-md-6'>
            <label> Transmision </label>
            <select id="transmision" name="transmision" class="form-control"required>
            <option selected>{{vehiculo.transmision}}</option>
            <option>Automatico</option>
            <option>Manual</option>
            </select>

        </div>


    </div>
    
    <div class="form-row">
        <div class='form-group col-md-6'>
            <label> Precio de renta </label>
            <input type="number"class="form-control"name="precio"value="{{vehiculo.precio}}" placeholder="CRC"required>
        </div>
        <div class='form-group col-md-6'>
            <label> Estado </label>
            <select id="estado" name="estado" class="form-control"required>
            <option selected>{{vehiculo.estado}}</option>
            <option>Disponible</option>
            <option>Rentado</option>
            </select>
        </div>
    </div>
   
   <div class='form-group'>
        <label> Extras </label>       
        <textarea class="form-control" id="extras"name="extras" rows="3">{{vehiculo.extras}}</textarea>
 
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Insertar</button>
        <a class="btn btn-secondary" href="/vehiculo/list"><i class="fa fa-list-alt"></i> Ver Todos</a>
    </div>

</form>
</div>