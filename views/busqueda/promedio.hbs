<div class="col-md-9 offset-md-1" style="background-color: #fff;margin-top: 25px;padding:20px;">

<h3>Promedio de precio por marca</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Precio Promedio</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.avg_precio}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a href="/">
<button class="btn btn-secondary" style="background-color:blueviolet"><span>Volver</span></button>
</a>  
</div>   